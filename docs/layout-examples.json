    "section_type_examples": [
      {
        "name": "Hero Banner",
        "typeKey": "hero",
        "description": "Large hero section with background image and CTA",
        "category": "Header",
        "configSchema": {
          "fields": [
            {
              "name": "title",
              "label": "Title",
              "type": "text",
              "required": true,
              "placeholder": "Enter hero title"
            },
            {
              "name": "subtitle",
              "label": "Subtitle",
              "type": "textarea",
              "required": false
            },
            {
              "name": "backgroundImage",
              "label": "Background Image",
              "type": "image",
              "required": true
            },
            {
              "name": "height",
              "label": "Height",
              "type": "select",
              "options": [
                { "label": "Small (400px)", "value": "400px" },
                { "label": "Medium (600px)", "value": "600px" },
                { "label": "Large (800px)", "value": "800px" },
                { "label": "Full Screen", "value": "100vh" }
              ]
            },
            {
              "name": "ctaButtons",
              "label": "CTA Buttons",
              "type": "repeater",
              "fields": [
                { "name": "text", "type": "text" },
                { "name": "link", "type": "text" },
                { "name": "style", "type": "select", "options": ["primary", "secondary"] }
              ]
            }
          ]
        },
        "defaultConfig": {
          "title": "Welcome",
          "height": "600px",
          "alignment": "center"
        }
      },
      {
        "name": "Blog Grid",
        "typeKey": "blog-grid",
        "description": "Display blog posts in grid layout",
        "category": "Content",
        "configSchema": {
          "fields": [
            {
              "name": "title",
              "label": "Section Title",
              "type": "text"
            },
            {
              "name": "layout",
              "label": "Grid Layout",
              "type": "select",
              "options": [
                { "label": "2 Columns", "value": "grid-2" },
                { "label": "3 Columns", "value": "grid-3" },
                { "label": "4 Columns", "value": "grid-4" }
              ]
            },
            {
              "name": "limit",
              "label": "Number of Posts",
              "type": "number",
              "defaultValue": 6
            },
            {
              "name": "categoryFilter",
              "label": "Filter by Category",
              "type": "select",
              "helpText": "Leave empty to show all categories"
            }
          ]
        }
      },
      {
        "name": "Contact Form",
        "typeKey": "contact-form",
        "description": "Contact form with customizable fields",
        "category": "Forms",
        "configSchema": {
          "fields": [
            {
              "name": "title",
              "label": "Form Title",
              "type": "text"
            },
            {
              "name": "fields",
              "label": "Form Fields",
              "type": "multi-select",
              "options": [
                { "label": "Name", "value": "name" },
                { "label": "Email", "value": "email" },
                { "label": "Phone", "value": "phone" },
                { "label": "Subject", "value": "subject" },
                { "label": "Message", "value": "message" }
              ]
            },
            {
              "name": "showMap",
              "label": "Show Map",
              "type": "boolean"
            }
          ]
        }
      }
    ]
  }
